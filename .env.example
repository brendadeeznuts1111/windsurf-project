# WebSocket Server Configuration
WS_PORT=3000
WS_COMPRESSION=true
WS_BACKPRESSURE_LIMIT=524288

# ML Configuration
ML_CONFIDENCE_THRESHOLD=0.8
ML_MODEL_PATH=./models/sharp-detection-v1

# Arbitrage Detection
ARB_EDGE_THRESHOLD=0.02
ARB_KELLY_FRACTION=0.25

# External APIs
DRAFTKINGS_API_KEY=your_key_here
FANDUEL_API_KEY=your_key_here

# Cloudflare Workers
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_token

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/odds_protocol
REDIS_URL=redis://localhost:6379

# API Gateway
API_KEY=your_api_key_here
API_VERSION=v1

# Stream Processor
STREAM_PROCESSOR_PORT=8081
MAX_CONCURRENT_CONNECTIONS=10000
MESSAGE_BUFFER_SIZE=50000

# Development Settings
NODE_ENV=development
LOG_LEVEL=info
METRICS_ENABLED=true

# Production Settings
NODE_ENV=production
LOG_LEVEL=warn
METRICS_ENABLED=true
MONITORING_ENABLED=true

# Testing
TEST_TIMEOUT=30000
TEST_PARALLEL_WORKERS=4

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Performance
WORKER_THREADS=4
MEMORY_LIMIT=2048
CPU_LIMIT=2

# Bun Runtime Configuration
BUN_OPTIONS="--watch --hot --bun --sql-preconnect"
BUN_INSPECT_PRELOAD="./scripts/preload.ts"
BUN_USER_AGENT="OddsProtocol/1.3.0"
BUN_SQL_PRECONNECT="true"

# Bun Debugging
BUN_DEBUG=0
BUN_TEST=0
